<!-- views/reviews-show.handlebars -->

<a href="/">
    Back to Home
</a>
<br>
<h1>
    {{review.title}}
</h1>
<h3>
    {{review.movieTitle}}
</h3>
<h3>
    Rating: {{review.rating}}
</h3>
<p>
    {{review.description}}
</p>

<button>
    <a href="/reviews/{{review._id}}/edit">
        Edit
    </a>
</button>

<p>
    <form method="POST" action="/reviews/{{review._id}}?_method=DELETE">
        <button type="submit">
            Delete
        </button>
    </form>
</p>

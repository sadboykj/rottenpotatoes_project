<!-- views/review-show.handlebars -->

<!-- link back to start -->
<a href="/">
    Back to Home
</a>

<h1>
    {{review.title}}
</h1>

<h2>
    {{review.MovieTitle}}
</h2>

<p>
    {{review.description}}
</p>

<!-- edit link -->
<p>
    <a href="/reviews/{{review._id}}/edit">Edit</a>
</p>

<!-- delete button -->
<p>
    <form method="POST" action="/reviews/{{review._id}}?_method=DELETE">
        <button type="submit">
            Delete
        </button>
    </form>
</p>
